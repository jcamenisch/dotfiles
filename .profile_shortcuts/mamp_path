if [[ "$SHELL" = "/bin/zsh" ]]; then

  mamp_path() {
    paths=($(find /Applications/MAMP | grep 'php.*bin$'))
    echo $paths

    if [[ -n "$paths" ]]; then
      echo 'Please choose a version (type number and then press [ENTER])'
      echo

      i=1
      for p in $paths; do
        echo "$i. $p"
        i=$(expr $i + 1)
      done

      read i

      PATH=$PATH:$paths[$i]
      echo "$paths[$i] added to \$PATH"
    else
      echo 'No MAMP paths found'
    fi
  }

fi
