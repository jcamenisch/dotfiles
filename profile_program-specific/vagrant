if [[ -d ~/uservoice ]]; then
  export UV_METROID_DIR=~/uservoice/metroid
  export UV_RAILS_DIR=~/uservoice/uservoice
fi

if ! is_executable v && [[ -n "$VAGRANT_HOME" ]]; then
  v() {
    cd $VAGRANT_HOME
    vagrant $@
    cd - >/dev/null
  }
  alias vu='v up'
  alias vss='v ssh'
  alias vs='v status'
fi
