r () {
  _GIT_ROOT=$(git rev-parse --show-toplevel)

  if [[ -x $GIT_ROOT/script/rails ]]; then
    # We're in a rails 3+ app
    bundle exec $GIT_ROOT/script/rails $*
  elif [[ -x $GIT_ROOT/script/$1 ]]; then
    # This must be a rails 2 app; oh my
    bundle exec $GIT_ROOT/script/$*
  fi

  unset _GIT_ROOT
}

alias rc="r console"
alias rd="r dbconsole"
alias rr="r runner"
alias rs="r server"
