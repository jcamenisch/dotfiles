if [[ "$(vi --version | head -1)" =~ ^VIM ]]; then
  if is_executable vim; then
    vim_executable=vim
  else
    vim_executable=vi
  fi
  
  export EDITOR="$vim_executable -u $XDG_CONFIG_HOME/vimrc"

  alias vim="$EDITOR"
  alias vi="$EDITOR"

  # If neovim is installed, alias that to use our vimrc file too
  is_executable nvim && alias nvim="n$EDITOR"

  safe_alias vo 'vi -O'
fi
