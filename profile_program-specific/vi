if [[ "$(vi --version | head -1)" =~ ^VIM ]]; then
  if is_executable nvim; then
    vim_executable=nvim
  elif is_executable vim; then
    vim_executable=vim
  else
    vim_executable=vi
  fi
  
  export EDITOR="$vim_executable -u $XDG_CONFIG_HOME/vimrc"

  alias vim="$EDITOR"
  alias vi="$EDITOR"

  alias vo="$EDITOR -O"
fi
