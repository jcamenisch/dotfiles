#!/bin/bash

cd "$(dirname $0)"

git pull
git submodule init
git submodule update

# Clean out any outdated symlinks from ~
for file in $(ls -A ~); do
  if [[ -h ~/$file ]]  && \             # It's a symlink,
    [[ ! -e ~/$file ]] && \             # that points to a nonexistent file,
    [[ $(ls -l ~/$file) == *$(pwd)* ]]  # somewhere inside this directory.
  then
    rm ~/$file
  fi
done

# Add all the latest symlinks into ~
for file in $(ls -A | grep -v "^\.skipfiles$" | grep -vf .skipfiles); do
  if [[ -e ~/$file ]] && [[ ! -h ~/$file ]]; then
    echo "skipping ~/$file, as it already exists"
  else
    ln -fs $(pwd)/$file ~/$file
  fi
done

cd - >/dev/null

source ~/.profile
