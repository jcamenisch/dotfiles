#!/bin/bash

cd "$(dirname $0)"

git pull
git submodule init
git submodule update

for file in $(ls -A | grep -v "^\.skipfiles$" | grep -vf .skipfiles); do
  if [[ -e ~/$file ]] && [[ ! -h ~/$file ]]; then
    echo "skipping ~/$file, as it already exists"
  else
    ln -fs $(pwd)/$file ~/$file
  fi
done

cd - >/dev/null

source ~/.profile
